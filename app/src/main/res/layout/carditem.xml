<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carditem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardUseCompatPadding="true"
    android:elevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardCornerRadius="2dp" >

    <RelativeLayout
        android:id="@+id/preview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="144dp"
            android:minHeight="100dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/preview_name"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/preview_image"
            android:paddingStart="8dp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/preview_author"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preview_name"
            android:layout_toRightOf="@+id/preview_image"
            android:paddingStart="8dp"
            android:paddingTop="8dp" />

        <ImageView
            android:id="@+id/preview_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/preview_image"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/preview_image"
            android:src="@drawable/v_star_x16" />

        <TextView
            android:id="@+id/preview_star_num"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@id/preview_image"
            android:layout_toRightOf="@id/preview_star"
            android:gravity="center|top" />

        <ImageView
            android:id="@+id/favorite_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/preview_image"
            android:layout_toRightOf="@+id/preview_star_num"
            android:src="@drawable/v_heart_outline_primary_x16" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
